{
    "id": "local-ci-env",
    "name": "CI Postman Env",
    "values": [
        {
            "key": "postmanApiKey",
            "value": "****REPLACE_ME****",
            "type": "secret",
            "enabled": true,
            "comment": "Postman API Key，可以放在 CI Secret 中"
        },
        {
            "key": "workspaceId",
            "value": "WS_XXXX",
            "type": "text",
            "enabled": true,
            "comment": "目標團隊的 workspace ID（用 GET /workspaces 查到）"
        },
        {
            "key": "collectionUid",
            "value": "",
            "type": "text",
            "enabled": true,
            "comment": "要更新的 collection UID；空值時會走 Import OpenAPI 建新集合"
        },
        {
            "key": "openapiUrl",
            "value": "https://your.cdn.com/openapi.yaml",
            "type": "text",
            "enabled": true,
            "comment": "OpenAPI 規格來源，可以是 URL 或檔案路徑"
        },
        {
            "key": "mode",
            "value": "import-openapi",
            "type": "text",
            "enabled": true,
            "comment": "選擇模式：import-openapi 或 update-collection"
        },
        {
            "key": "validateCollection",
            "value": "true",
            "type": "text",
            "enabled": true,
            "comment": "是否驗證 Collection 結構（用 postman-collection SDK）"
        },
        {
            "key": "validateOpenAPI",
            "value": "true",
            "type": "text",
            "enabled": true,
            "comment": "是否用 Spectral 驗證 OpenAPI 格式"
        },
        {
            "key": "failOnMissingExample",
            "value": "false",
            "type": "text",
            "enabled": true,
            "comment": "若為 true，缺少 description/example 就會讓 CI fail"
        },
        {
            "key": "aiOutputFile",
            "value": "./.tmp/ai_output.json",
            "type": "text",
            "enabled": true,
            "comment": "AI 產出檔案位置（完整 JSON 或 JSON Patch）"
        },
        {
            "key": "aiOutputIsPatch",
            "value": "false",
            "type": "text",
            "enabled": true,
            "comment": "true = aiOutputFile 是 JSON Patch；false = 完整 Collection JSON"
        }
    ],
    "_postman_variable_scope": "environment",
    "_postman_exported_using": "local-ci"
}